{
  "name": "gingko-writer",
  "productName": "Gingko Writer",
  "version": "2.5.0",
  "description": "Gingko client rewritten in Elm, packaged with Electron.",
  "repository": {
    "type": "git",
    "url": "git://github.com/gingko/client.git"
  },
  "author": {
    "name": "Gingko Inc",
    "email": "adriano@gingkowriter.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gingko/client/issues"
  },
  "homepage": "https://github.com/gingko/client",
  "scripts": {
    "start": "webpack --progress --watch",
    "test:cypress": "cypress run",
    "test": "playwright test",
    "test:firefox": "cypress run --browser firefox",
    "build": "webpack",
    "electron": "electron ./app",
    "pack": "electron-builder --dir",
    "dist": "set DEBUG=electron-builder&& electron-builder",
    "dist:win": "DEBUG=electron-builder && electron-builder -w",
    "dist:mac": "DEBUG=electron-builder && electron-builder -m",
    "release": "electron-builder",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "com.gingkowriter.desktop",
    "afterSign": "./build/scripts/notarize.js",
    "fileAssociations": [
      {
        "ext": "gko",
        "name": "Gingko Document",
        "mimeType": "application/vnd.gingko.tree-document"
      },
      {
        "ext": "gkw",
        "name": "Gingko Writer Document",
        "mimeType": "application/vnd.gingko-writer.tree-document"
      }
    ],
    "extraResources": [
      {
        "from": "./src/bin/${os}/",
        "to": "."
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./build/entitlements.mac.plist",
      "entitlementsInherit": "./build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false,
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": ["snap", "AppImage"],
      "category": "Office"
    }
  },
  "dependencies": {
    "@types/node": "^17.0.23",
    "axios": "^0.19.2",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^4.4.7",
    "electron-store": "^8.0.1",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^5.0.1",
    "electron-window-state": "^4.1.1",
    "file-type": "^8.1.0",
    "filenamify": "^2.1.0",
    "firstline": "^2.0.2",
    "fs-extra": "^7.0.1",
    "gsap": "^2.1.3",
    "hash-wasm": "^4.4.1",
    "leveldown": "^6.1.1",
    "levelup": "^5.1.1",
    "lodash": "^4.17.15",
    "logrocket": "^1.0.14",
    "moment": "^2.22.2",
    "mousetrap": "^1.6.1",
    "node-machine-id": "^1.1.10",
    "platform": "^1.3.6",
    "pouchdb": "^7.1.1",
    "read-chunk": "^2.1.0",
    "screenfull": "^5.1.0",
    "sha1": "^1.1.1",
    "system-font-families": "^0.4.1",
    "textarea-autosize": "^0.4.2",
    "transform-pouch": "^1.1.5",
    "turndown": "^4.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.20.2",
    "chai": "^4.1.2",
    "copy-webpack-plugin": "^6.0.1",
    "couchdb-backup": "^1.0.2",
    "cypress": "^7.7.0",
    "cypress-file-upload": "^4.1.1",
    "cypress-watch-and-reload": "^1.2.18",
    "electron": "^18.1.0",
    "electron-builder": "^23.0.3",
    "electron-notarize": "^1.2.1",
    "electron-rebuild": "^3.2.7",
    "elm": "^0.19.1-3",
    "elm-webpack-loader": "^6.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^7.2.0",
    "node-abi": "^2.17.0",
    "playwright": "^1.21.0",
    "prettier": "2.1.2",
    "segfault-handler": "^1.3.0",
    "standard": "^16.0.4",
    "string-replace-loader": "^2.3.0",
    "webpack": "^4.41.0",
    "webpack-cli": "^4.9.2",
    "webpack-merge": "^4.2.2",
    "worker-loader": "^3.0.7"
  }
}
